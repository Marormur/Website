{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Firefox: Launch with Dev Server",
      "type": "firefox",
      "request": "launch",
      "reAttach": true,
      "url": "http://127.0.0.1:5173",
      "webRoot": "${workspaceFolder}",
      // Auto-refresh the tab when files change while debugging (Firefox Debugger feature)
      "reloadOnChange": {
        "watch": [
          "${workspaceFolder}/**/*.html",
          "${workspaceFolder}/**/*.css",
          "${workspaceFolder}/**/*.js"
        ],
        "ignore": [
          "${workspaceFolder}/node_modules/**",
          "${workspaceFolder}/dist/**",
          "${workspaceFolder}/.git/**"
        ]
      },
      "pathMappings": [
        {
          "url": "http://127.0.0.1:5173",
          "path": "${workspaceFolder}"
        }
      ]
    },
    {
      "name": "Chrome: Launch with Dev Server (pwa)",
      "type": "pwa-chrome",
      "request": "launch",
      "url": "http://127.0.0.1:5173",
      "webRoot": "${workspaceFolder}",
      "pathMapping": {
        "/": "${workspaceFolder}"
      },
      "userDataDir": "${workspaceFolder}/.vscode/chrome-profile",
      "runtimeArgs": [
        "--remote-debugging-port=9222",
        "--no-first-run",
        "--no-default-browser-check"
      ]
    },
    {
      "name": "Edge: Launch with Dev Server",
      "type": "msedge",
      "request": "launch",
      "url": "http://127.0.0.1:5173",
      "webRoot": "${workspaceFolder}",
      "pathMapping": {
        "/": "${workspaceFolder}"
      }
    },
    {
      "name": "Chrome: Dev + Tailwind (Start All) (pwa)",
      "type": "pwa-chrome",
      "request": "launch",
      "url": "http://127.0.0.1:5173",
      "webRoot": "${workspaceFolder}",
      "userDataDir": "${workspaceFolder}/.vscode/chrome-profile",
      "runtimeArgs": [
        "--remote-debugging-port=9222",
        "--no-first-run",
        "--no-default-browser-check"
      ]
    },

    {
      "name": "Node: server.js (debug)",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/server.js",
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal"
    },
    {
      "name": "Firefox: Launch (File Protocol)",
      "type": "firefox",
      "request": "launch",
      "reAttach": true,
      "file": "${workspaceFolder}/index.html"
    },
    {
      "name": "Firefox: Attach to Running Instance",
      "type": "firefox",
      "request": "attach",
      "url": "http://127.0.0.1:5173",
      "webRoot": "${workspaceFolder}"
    },
    {
      "name": "Playwright: Debug Current Test",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/node_modules/@playwright/test/cli.js",
      "args": ["test", "${file}", "--headed"],
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal",
      "env": {
        "MOCK_GITHUB": "1"
      }
    }
  ]
}
